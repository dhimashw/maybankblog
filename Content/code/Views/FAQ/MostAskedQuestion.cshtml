@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Feature.Library.Helpers
@model RenderingModel
@{
    var mostAskedList = Model.Item.Children;
    int counter = 0;
}

<div class="row">
    <div class="col-xs-12">
        <div class="heading full">
            <h1>@Model.Item.Field(Sitecore.Feature.Library.Templates.BaseField.Fields.Title)</h1>
        </div>
    </div>
</div>
@for (var i = 1; i <= mostAskedList.Count; i++)
{
    if (i % 3 == 1)
    {
        <div class="row">
            @for (int j = counter; j < mostAskedList.Count; j++)
            {
                <div class="col-xs-12 col-sm-4">
                    <div class="p-group">
                        <h3>@Html.Sitecore().Field(Sitecore.Feature.Library.Templates.BaseField.Fields.Title, mostAskedList.ElementAt(j))</h3>
                        @Html.Sitecore().Field(Sitecore.Feature.Library.Templates.BaseField.Fields._SummaryRichText, mostAskedList.ElementAt(j))
                    </div>
                </div>
                if (j % 3 == 2)
                {
                    break;
                }
            }
        </div>
    }
    counter++;
}
@using Sitecore.Mvc
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Feature.Library;
@using Sitecore.Data.Items;
@using Sitecore.Foundation.Alerts;
@using Sitecore.Foundation.Alerts.Extensions;
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    IHtmlString media;
    Sitecore.Data.Fields.LinkField linkField;
    string value = Model.Item.Fields[Sitecore.Feature.Library.Templates.ProgramContentSet1.Fields.ImageOrVideo].InheritedValue;
    if (!Model.Item.Fields[Sitecore.Feature.Library.Templates.ProgramContentSet1.Fields.ImageOrVideo].HasValue)
    {
        media = new HtmlString("<p>Please insert some media</p>");
    }
    else
    {

        linkField = Model.Item.Fields[Sitecore.Feature.Library.Templates.ProgramContentSet1.Fields.ImageOrVideo];
        media = Sitecore.Feature.Library.Helpers.LibraryHelpers.ImageOrVideoHelper(linkField, Model.Item);

    }
}
<div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-push-6">
        @media
        <br />
    </div>
    <div class="col-xs-12 col-sm-6 col-sm-pull-6">
        @Html.Sitecore().Field(Sitecore.Feature.Library.Templates.ProgramContentSet1.Fields.Text, Model.Item)
    </div>
</div>

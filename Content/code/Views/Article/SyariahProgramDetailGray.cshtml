@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Resources.Media
@using Sitecore.Data.Items

@model Sitecore.Mvc.Presentation.RenderingModel
@{
    IHtmlString media;
    Sitecore.Data.Fields.LinkField linkField;
    string value = Model.Item.Fields[Sitecore.Feature.Library.Templates.ProgramContentSet2.Fields.ImageOrVideo].InheritedValue;
    if (string.IsNullOrEmpty(value))
    {
        media = new HtmlString("<p>Please insert some media</p>");
    }
    else
    {
        linkField = Model.Item.Fields[Sitecore.Feature.Library.Templates.ProgramContentSet2.Fields.ImageOrVideo];
        media = Sitecore.Feature.Library.Helpers.LibraryHelpers.ImageOrVideoHelper(linkField, Model.Item);

    }
}
<div class="section gray">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                @media
            </div>
            <div class="col-xs-12 col-sm-6">
                @Html.Sitecore().Field(Sitecore.Feature.Library.Templates.ProgramContentSet2.Fields.Text, Model.Item)
            </div>

        </div>
    </div>
</div>

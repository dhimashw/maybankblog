@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.Alerts
@using Sitecore.Foundation.Alerts.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Data.Items
@using Sitecore.Data.Fields
@model RenderingModel
@{
    int maxItem = 2;
    if (RenderingContext.Current.Rendering.Parameters["Max Item"] != null)
    {
        int.TryParse(RenderingContext.Current.Rendering.Parameters["Max Item"], out maxItem);
    }
}

<div>
    <div class="row">

        @for(int c = 0; c < maxItem; c++)
        {
            <div class="col-xs-12 col-sm-6 col-xs-6@landscape mb-3">
                @Html.Sitecore().DynamicPlaceholder("registration-card")
            </div>
        }

    </div>
</div>


@using Sitecore.Mvc
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Feature.Library;
@using Sitecore.Data.Items;
@using Sitecore.Foundation.Alerts;
@using Sitecore.Foundation.Alerts.Extensions;
@using Sitecore.Mvc.Presentation

@model RenderingModel
@if (!Model?.Item?.IsDerived(Sitecore.Feature.Library.Templates.ProductDetailContent.ID) ?? true)
{
    @Html.PageEditorInfo(AlertTexts.InvalidDataSourceTemplate(Sitecore.Feature.Library.Templates.ProductDetailContent.ID), AlertTexts.InvalidDataSourceTemplateFriendlyMessage, Model.Item?.ID, Model.Rendering.Item?.ID)
    return;
}

<div class="valign-center w-auto">
    @if (!Model.Item.Fields[Sitecore.Feature.Library.Templates.BaseField.Fields.Title].ToString().IsEmpty())
    {
        <div class="valign-item h-p-0">
            <h1 class="no-mb">@Html.Sitecore().Field(Sitecore.Feature.Library.Templates.BaseField.Fields.Title)</h1>
        </div>
    }
    @if (!Model.Item.Fields[Sitecore.Feature.Library.Templates.BaseField.Fields.Thumbnail].ToString().IsEmpty())
    {
        <div class="valign-item h-p">@Html.Sitecore().Field(Sitecore.Feature.Library.Templates.BaseField.Fields.Thumbnail, Model.Item, new { @id = "perbankan-syariah-logo", @class = "img-responsive" })</div>
    }
</div>
<div class="gray-text v-p">
    @Html.Sitecore().Field(Sitecore.Feature.Library.Templates.BaseField.Fields.Content)
</div>

@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using template = Sitecore.Feature.Library.Templates.MBMRichTextAndPopUp
@model RenderingModel
@{
    Guid rng = Guid.NewGuid();
}

@Html.Raw(Html.Sitecore().Field(template.Fields.RichTextContent, Model.Item))
<br />
<a class="btn btn-primary js-modal-trigger" href="javascript:void(0)" modal="event-rundown-@rng">@Html.Sitecore().Field(template.Fields.ButtonLabel, Model.Item)</a>

<div class="modal" tabindex="-1" role="dialog" modal-name="event-rundown-@rng">
    <div class="modal-center">
        <div class="modal-dialog" role="document">
            <div class="modal-content white-text">
                <div class="modal-header"><a class="close js-modal-trigger-close" data-dismiss="modal" type="button" aria-label="Close"></a></div>
                <div class="modal-body">
                    <div class="modal-body-scroll py-4">

                        @Html.Raw(Html.Sitecore().Field(template.Fields.PopUpContent, Model.Item))
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

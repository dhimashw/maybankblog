@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using richTextContent = Sitecore.Feature.Library.Templates.BlankRichText
@model RenderingModel
@{

}

<div class="container">
    <div class="article">
        @if (RenderingContext.Current.Rendering.Parameters["No Row"] == "1")
        {
            @Html.Raw(Html.Sitecore().Field(Sitecore.Feature.Library.Templates.BaseField.Fields.Content.ToString(), Model.Item))
        }
        else
        {
            <div class="row">

                @Html.Raw(Html.Sitecore().Field(Sitecore.Feature.Library.Templates.BaseField.Fields.Content.ToString(), Model.Item))

            </div>
        }
    </div>
</div>
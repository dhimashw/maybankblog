@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.Dictionary.Extensions
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Feature.Content
@using Sitecore.Feature.Library.Helper
@using System.linq
@model RenderingModel
@{

}

<div class="container">
    <div class="heading">
        <h1>@Html.Sitecore().Dictionary("/Feature/Content/Benefit", "Edit This Content On Dictionary")</h1>
    </div>
    <div class="row">
        @if (Model.Item != null && Model.Item.Children.Count > 0)
        {
            foreach (Sitecore.Data.Items.Item BenefitItem in Model.Item.Children)
            {
                string imageUrl = Variables._defaultImageBenefit;
                if (BenefitItem.ImageUrl(Sitecore.Feature.Content.Templates.Benefit.Fields.Icon) != null)
                {
                    imageUrl = BenefitItem.ImageUrl(Sitecore.Feature.Content.Templates.Benefit.Fields.Icon);
                }
                <div class="card-ico borderless col-12 col-lg-3 col-md-6 col-sm-6">
                    <div class="card-ico-wrapper">
                        <div class="card-ico-box">
                            <div class="card-ico-box-wrapper text-center">
                                <div class="table full-height">
                                    <div class="table-cell">
                                        <div class="card-ico-image"><img src="@imageUrl" /></div>
                                        <div class="card-ico-caption">@Html.Sitecore().Field(Sitecore.Feature.Content.Templates.Benefit.Fields.stringBenefitTitle, BenefitItem)</div>
                                        <div class="card-ico-p">@Html.Sitecore().Field(Sitecore.Feature.Content.Templates.Benefit.Fields.stringBenefitDescription, BenefitItem)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
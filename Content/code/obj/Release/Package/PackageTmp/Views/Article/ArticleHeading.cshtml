@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Foundation.SitecoreExtensions.Extensions
@using Sitecore.Feature.Content;
@model Sitecore.Mvc.Presentation.RenderingModel
@{
    var item = Model.Item;
    var url = @item.LinkFieldUrl(Templates.GeneralUrl.Fields.Url).ToString();
    var targetType = @item.LinkFieldOptions(Templates.GeneralUrl.Fields.Url, LinkFieldOption.Target);
}

<div class="section story-list narrow-top">
    <div class="container">
        <div class="heading">
            <h1>@Html.Sitecore().Field(Templates.GeneralValue.Fields.Title)</h1><a class="see-more" href="@url" target="@targetType">@Model.Item.LinkFieldOptions(Templates.GeneralUrl.Fields.Url, LinkFieldOption.Text)</a>
        </div>
    </div>
    <div class="container js-mobile-to-carousel-container">
    </div>
</div>